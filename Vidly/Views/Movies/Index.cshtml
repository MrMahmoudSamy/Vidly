@model IEnumerable<Vidly.Models.Movies>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>
@{ 
    if(!Model.Any())
    {
        <p>We don't have any Movies yet.</p>
    }
    else
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="row">Movie</th>
                    <th scope="row">Genre</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, new { @class = "navbar-brand" })
                        </td>
                        <td>@movie.Genre.GenreName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

