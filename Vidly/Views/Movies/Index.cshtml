@model IEnumerable<Vidly.Models.Movies>
@{
    ViewBag.Title = "Index";
}



<h2>Movies</h2>

@Html.ActionLink("New Movies", "New", "Movies", new { @class = "btn btn-primary" })

@{ 
    if(!Model.Any())
    {
        <p>We don't have any Movies yet.</p>
    }
    else
    {
        <table id="Movies" class="table table-hover">
            <thead>
                <tr>
                    <th scope="row">Movie</th>
                    <th scope="row">Genre</th>
                    <th scope="row">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, new { @class = "navbar-brand" })
                        </td>
                        <td>@movie.Genre.GenreName</td>
                        <td>
                            <button data-movie-id="@movie.Id" class="btn btn-link js-delete">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@section scripts{
    <script>
        $(document).ready(function () {
            $("#Movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc:""
                },
                columns:
                    [
                        {
                            data: 'name',
                            render: function (data, type, movie) {
                                return "<a href='/movies/edit/" + movie.id + "'>" + data + "</a>";
                            }
                        },
                        {
                            data:'name'
                        },
                        {
                            data: 'id',
                            render: function (data) {
                                return "<button class='btn btn-link js-delete' data-movie-id=" + data + ">Delete</button>";
                            }
                        }

                    ]
            });

            $("#Movies").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                    if (result)
                    {
                        $.ajax({
                            url: "/api/movies/" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
            });
        });
    </script>
    }