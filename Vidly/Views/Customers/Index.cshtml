@model  IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>
@Html.ActionLink("New Customer" , "New", "Customers", new { @class = "btn btn-primary" })

@{ 
    if(!Model.Any())
    {
        <text>We don't have any customers yet</text>
    }
    else
    {
        <table id="customers" class="table table-hover">
            <thead>
                <tr>
                    <th scope="row">Customer</th>
                    <th scope="row">Membership Type</th>
                    <th scope="row">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(customer.CustomerName, "Edit", "Customers", new { id = customer.CustomerId }, new { @class = "navbar-brand" })
                        </td>
                        <td>@customer.MemberShipType.Name</td>
                        <td><button data-customer-id="@customer.CustomerId" class="btn btn-link js-delete">Delete</button></td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@section scripts{
   <script>
       $(document).ready(function(){
           $("#customers").on("click",".js-delete", function () {
               var button = $(this);
               bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                   if(result)
                   {
                       $.ajax({
                           url: "/api/customers/" + button.attr("data-customer-id"),
                           method: "DELETE",
                           success: function () {
                               button.parents("tr").remove();
                           }
                       });
                   }
               });
              
           });
       });
      

    </script>
 } 